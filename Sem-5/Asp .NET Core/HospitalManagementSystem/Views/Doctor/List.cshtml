@using HospitalManagementSystem.Utilities
@model List<Doctor>

@{
    ViewData["Title"] = "Doctor List";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <div class="pagetitle">
        <h1 class="display-6 mb-1">Doctors</h1>
        <p class="text-muted mb-0">Manage all doctor records.</p>
    </div>
    <a asp-controller="Doctor" asp-action="Create" class="btn btn-primary">
        <i class="bx bx-plus me-1"></i> New Doctor
    </a>
</div>

<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Doctor Info</th>
                    <th>Specialization & Dept.</th>
                    <th>Contact</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var doctor in Model)
                {
                    <tr class="clickable-row" style="cursor: pointer;" data-modal-target="#modal-@doctor.DoctorId">
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@(string.IsNullOrEmpty(doctor.ProfilePhoto) ? "/images/default-profile.png" : doctor.ProfilePhoto)"
                                     alt="Avatar" class="rounded-circle" style="width: 45px; height: 45px; object-fit: cover;" />
                                <div class="ms-3">
                                    <div class="fw-bold">@doctor.Name</div>
                                    <small class="text-muted">@doctor.Email</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div>
                                <div class="fw-bold">@doctor.Specialization</div>
                                <small class="text-muted">
                                    @(doctor.DoctorDepartments?.FirstOrDefault()?.Department?.DepartmentName ?? "N/A")
                                </small>
                            </div>
                        </td>
                        <td>@doctor.Phone</td>
                        <td class="text-center">
                            @if (doctor.IsActive)
                            {
                                <span class="badge bg-label-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-label-secondary">Inactive</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="d-inline-flex gap-1">
                                <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@UrlEncryptor.Encrypt(doctor.DoctorId.ToString())"
                                   class="btn btn-sm btn-outline-primary" title="Edit" onclick="event.stopPropagation();">
                                    <i class="bx bx-pencil"></i>
                                </a>
                                <form asp-controller="Doctor" asp-action="Delete" asp-route-id="@doctor.DoctorId" method="post">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete"
                                            onclick="return confirm('Are you sure you want to delete this department?');">
                                        <i class="bx bx-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@foreach (var doctor in Model)
{
    <div class="modal fade" id="modal-@doctor.DoctorId" tabindex="-1" aria-labelledby="modalLabel-@doctor.DoctorId" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel-@doctor.DoctorId">Doctor Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @await Html.PartialAsync("_DoctorDetails", doctor)
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.clickable-row').on('click', function (e) {
                // Check if the click target is within a dropdown or a button/link
                if ($(e.target).closest('.dropdown').length || $(e.target).is('button, a') || $(e.target).closest('button, a').length) {
                    return; // Do nothing if click is on an interactive element
                }

                // If not an interactive element, show the modal
                var modalTarget = $(this).data('modal-target');
                var modal = new bootstrap.Modal(document.querySelector(modalTarget));
                modal.show();
            });
        });
    </script>
}