@model List<Doctor>

<div>
    <div class="pagetitle my-4">
        <h1 class="display-6">Doctor List</h1>
    </div>
</div>
<div class="card">
    <h5 class="card-header">All Doctors</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile No</th>
                    <th>Qualifiaction</th>
                    <th>Specialization</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var doctor in Model)
                {
                    <tr>
                        <td><strong>@doctor.Name</strong></td>
                        <td>@doctor.Email</td>
                        <td>@doctor.Phone</td>
                        <td>@doctor.Qualification</td>
                        <td>@doctor.Specialization</td>
                        <td>
                            <span class="badge bg-label-primary me-1">
                                @(doctor.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="doctor" asp-action="Edit" asp-route-id="@doctor.DoctorId">
                                        <i class="bx bx-edit-alt me-1"></i> Edit
                                    </a>
                                    <form asp-controller="Doctor" asp-action="Delete" asp-route-id="@doctor.DoctorId" method="post" style="display:inline;">
                                        <button type="submit" class="dropdown-item" onclick="return confirm('Are you sure you want to delete this doctor?');">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-controller="doctor" asp-action="Create" class="fab-add-doctor" title="Create new doctor">
    <span class="fab-content">
        <i class="bx bx-user-plus"></i>
        <span class="text">Create new doctor</span>
    </span>
</a>

@section Scripts {
    <style>
        .fab-add-doctor {
            position: fixed;
            bottom: 32px;
            right: 32px;
            z-index: 999;
            width: 56px;
            height: 56px;
            background: #696cff;
            color: #fff;
            border-radius: 28px;
            font-size: 1.4rem;
            box-shadow: 0 2px 8px rgba(105, 108, 255, 0.2);
            transition: width 0.3s ease, background 0.2s ease;
            overflow: hidden;
            white-space: nowrap;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .fab-content {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 0 16px;
        }

            .fab-content i {
                flex-shrink: 0;
                font-size: 1.4rem;
                transition: margin 0.3s ease;
            }

        .fab-add-doctor .text {
            opacity: 0;
            margin-left: 0;
            overflow: hidden;
            max-width: 0;
            transition: opacity 0.3s ease, max-width 0.3s ease, margin-left 0.3s ease;
            font-size: 1rem;
            white-space: nowrap;
        }

        .fab-add-doctor:hover {
            width: 220px;
            background: #5a5edb;
        }

            .fab-add-doctor:hover .text {
                opacity: 1;
                margin-left: 12px;
                max-width: 140px;
            }

        .fab-add-doctor i,
        .fab-add-doctor .text {
            color: white;
            transition: color 0.3s ease;
        }

    </style>
}
