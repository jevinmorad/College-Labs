@model HospitalManagementSystem.Models.Doctor

@{
    bool isEdit = Model != null && Model.DoctorId > 0;
    string formAction = isEdit ? "Edit" : "Create";
    int UserId = CommonVariable.UserID() ?? 1;
}

<div>
    <div class="pagetitle my-4">
        <h1 class="display-6">@(isEdit ? "Edit Doctor" : "Create Doctor")</h1>
        <p class="text-muted">
            @(isEdit ? "Update the doctor information below." : "Please fill in the details to create a new doctor.")
        </p>
    </div>

    <section class="section">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h5 class="card-title mb-4">Doctor Information</h5>
                <form method="post" asp-controller="Doctor" asp-action="@formAction" enctype="multipart/form-data">
                    @if (isEdit)
                    {
                        <input type="hidden" asp-for="DoctorId" />
                    }
                    <input type="hidden" asp-for="UserID" value="@UserId" />

                    <div class="mb-3 row">
                        <label asp-for="Name" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.Name)<span class="text-danger">&nbsp;*</span></label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="ProfilePhoto" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.ProfilePhoto)</label>
                        <div class="col-sm-10">
                            @if (isEdit && !string.IsNullOrEmpty(Model.ProfilePhoto))
                            {
                                <div class="mb-2">
                                    <img src="@Model.ProfilePhoto" alt="Profile photo"
                                         style="max-height:100px; border:1px solid #ccc; padding:2px;" />
                                </div>
                            }
                            <input name="ProfilePhoto" class="form-control" type="file" accept="image/*" />
                        </div>
                    </div>
                    <input type="hidden" asp-for="ProfilePhoto" />

                    <div class="mb-3 row">
                        <label asp-for="Email" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.Email)<span class="text-danger">&nbsp;*</span></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" type="email" placeholder="example@domain.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="Phone" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.Phone)<span class="text-danger">&nbsp;*</span></label>
                        <div class="col-sm-10">
                            <input asp-for="Phone" class="form-control" placeholder="e.g. 9876543210" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="Qualification" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.Qualification)<span class="text-danger">&nbsp;*</span></label>
                        <div class="col-sm-10">
                            <input asp-for="Qualification" class="form-control" placeholder="e.g. MBBS, MD" />
                            <span asp-validation-for="Qualification" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4 row">
                        <label asp-for="Specialization" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.Specialization)<span class="text-danger">&nbsp;*</span></label>
                        <div class="col-sm-10">
                            <input asp-for="Specialization" class="form-control" placeholder="e.g. Cardiologist" />
                            <span asp-validation-for="Specialization" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4 row">
                        <label class="col-sm-2 col-form-label">Department<span class="text-danger">&nbsp;*</span></label>
                        <div class="col-sm-10">
                            <select name="SelectedDepartmentId" asp-items="@ViewBag.Departments" class="form-control" value="@ViewBag.SelectedDepartmentId">
                                <option value="">-- Select a Department --</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary px-4">
                                @(isEdit ? "Save Edit" : "Save Doctor")
                            </button>
                            <button type="reset" class="btn btn-secondary ms-2">Reset</button>
                            <a asp-action="List" class="btn btn-outline-secondary ms-2">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}