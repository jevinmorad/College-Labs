@model Employee

@{
    bool isEdit = Model != null && Model.EmployeeId > 0;
    string formAction = isEdit ? "Edit" : "Create";
    string pageTitle = isEdit ? "Edit Employee" : "Add Employee";
    string buttonText = isEdit ? "Save Edit" : "Add Employee";
}

<div>
    <div class="pagetitle my-4">
        <h1 class="display-6">@pageTitle</h1>
        <p class="text-muted">
            @(isEdit ? "Update the employee information below." : "Fill in the details below to add a new employee.")
        </p>
    </div>
    <section class="section">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h5 class="card-title mb-4">Employee Information</h5>
                <form method="post" asp-action="@formAction" asp-controller="Employee" enctype="multipart/form-data">
                    @if (isEdit)
                    {
                        <input type="hidden" asp-for="EmployeeId" />
                    }
                    <div class="mb-3 row">
                        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="FirstName" class="form-control" placeholder="First Name"  />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="LastName" class="form-control" placeholder="Last Name"  />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="ProfilePhoto" class="col-sm-2 col-form-label">@Html.DisplayNameFor(m => m.ProfilePhoto)</label>
                        <div class="col-sm-10">
                            @if (isEdit && !string.IsNullOrEmpty(Model.ProfilePhoto))
                            {
                                <div class="mb-2">
                                    <img src="@Model.ProfilePhoto" alt="Profile photo"
                                         style="max-height:100px; border:1px solid #ccc; padding:2px;" />
                                </div>
                            }
                            <input name="ProfilePhoto" class="form-control" type="file" accept="image/*" />
                        </div>
                    </div>
                    <input type="hidden" asp-for="ProfilePhoto" />

                    <div class="mb-3 row">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" type="email" placeholder="Email"  />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number"  />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="DateOfBirth" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="DateOfBirth" class="form-control" type="date"  />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <select asp-for="Gender" class="form-select" >
                                <option value="">-- Select Gender --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="HireDate" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="HireDate" class="form-control" type="date"  />
                            <span asp-validation-for="HireDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="JobTitle" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="JobTitle" class="form-control" placeholder="Job Title"  />
                            <span asp-validation-for="JobTitle" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Department" class="form-control" placeholder="Department"  />
                            <span asp-validation-for="Department" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="Salary" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Salary" class="form-control" type="number" step="0.01" placeholder="Salary"  />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="IsActive" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10 d-flex align-items-center">
                            <input asp-for="IsActive" class="form-check-input me-2" type="checkbox" />
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary px-4">@buttonText</button>
                            <button type="reset" class="btn btn-secondary ms-2">Reset</button>
                            <a asp-action="List" class="btn btn-outline-secondary ms-2">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}