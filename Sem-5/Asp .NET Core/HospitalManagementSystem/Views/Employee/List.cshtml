@model DataTable
@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <div class="pagetitle">
        <h1 class="display-6">Employee List</h1>
    </div>
    <div class="dropdown">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bx bx-filter-alt"></i> Filter
        </button>
        <ul class="dropdown-menu p-3" style="min-width: 200px;" aria-labelledby="filterDropdown">
            <li>
                <strong>Gender</strong><br />
                <div class="form-check">
                    <input class="form-check-input filter-gender" type="checkbox" value="Male" id="filterMale">
                    <label class="form-check-label" for="filterMale">Male</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input filter-gender" type="checkbox" value="Female" id="filterFemale">
                    <label class="form-check-label" for="filterFemale">Female</label>
                </div>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li>
                <strong>Status</strong><br />
                <div class="form-check">
                    <input class="form-check-input filter-status" type="checkbox" value="Active" id="filterActive">
                    <label class="form-check-label" for="filterActive">Active</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input filter-status" type="checkbox" value="Inactive" id="filterInactive">
                    <label class="form-check-label" for="filterInactive">Inactive</label>
                </div>
            </li>
        </ul>
    </div>
</div>

<div class="card">
    <h5 class="card-header">All Users</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone No</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Hire Date</th>
                    <th>Job Title</th>
                    <th>Department</th>
                    <th>Salary</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        <td><strong>@row["FirstName"]</strong></td>
                        <td>@row["LastName"]</td>
                        <td>@row["PhoneNumber"]</td>
                        <td>@row["Email"]</td>
                        <td>@row["DateOfBirth"]</td>
                        <td>@row["Gender"]</td>
                        <td>@row["HireDate"]</td>
                        <td>@row["JobTitle"]</td>
                        <td>@row["Department"]</td>
                        <td>@row["Salary"]</td>
                        <td>
                            <span class="badge bg-label-primary me-1">
                                @((Convert.ToBoolean(row["IsActive"]) ? "Active" : "Inactive"))
                            </span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Employee" asp-action="Edit" asp-route-id="@row["EmployeeId"]">
                                        <i class="bx bx-edit-alt me-1"></i> Edit
                                    </a>
                                    <form asp-controller="Employee" asp-action="Delete" asp-route-id="@row["EmployeeId"]" method="post" style="display:inline;">
                                        <button type="submit" class="dropdown-item" onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-controller="Employee" asp-action="Create" class="fab-add-user" title="Create new user">
    <span class="fab-content">
        <i class="bx bx-user-plus"></i>
        <span class="text">Create new Employee</span>
    </span>
</a>