@model DataTable
@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

FirstName NVARCHAR(100) NOT NULL,
    LastName NVARCHAR(100) NOT NULL,
    Email NVARCHAR(255) UNIQUE,
    PhoneNumber NVARCHAR(20),
    DateOfBirth DATE,
    Gender NVARCHAR(10),
    HireDate DATE NOT NULL,
    JobTitle NVARCHAR(100),
    Department NVARCHAR(100),
    Salary DECIMAL(18,2),
    IsActive BIT DEFAULT 1,

<div>
    <div class="pagetitle my-4">
        <h1 class="display-6">User List</h1>
    </div>
</div>
<div class="card">
    <h5 class="card-header">All Users</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone No</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Hire Date</th>
                    <th>Job Title</th>
                    <th>Department</th>
                    <th>Salary</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        <td><strong>@row["FirstName"]</strong></td>
                        <td>@row["LastName"]</td>
                        <td>@row["PhoneNumber"]</td>
                        <td>@row["Email"]</td>
                        <td>@row["DateOfBirth"]</td>
                        <td>@row["Gender"]</td>
                        <td>@row["HireDate"]</td>
                        <td>@row["JobTitle"]</td>
                        <td>@row["Department"]</td>
                        <td>@row["Salary"]</td>
                        <td>
                            <span class="badge bg-label-primary me-1">
                                @((Convert.ToBoolean(row["IsActive"]) ? "Active" : "Inactive"))
                            </span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Employee" asp-action="Edit" asp-route-id="@row["EmployeeId"]">
                                        <i class="bx bx-edit-alt me-1"></i> Edit
                                    </a>
                                    <form asp-controller="Employee" asp-action="Delete" asp-route-id="@row["EmployeeId"]" method="post" style="display:inline;">
                                        <button type="submit" class="dropdown-item" onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-controller="Employee" asp-action="Create" class="fab-add-user" title="Create new user">
    <span class="fab-content">
        <i class="bx bx-user-plus"></i>
        <span class="text">Create new Employee</span>
    </span>
</a>

@section Scripts {
    <style>
        .fab-add-user {
            position: fixed;
            bottom: 32px;
            right: 32px;
            z-index: 999;
            width: 56px;
            height: 56px;
            background: #696cff;
            color: #fff;
            border-radius: 28px;
            font-size: 1.4rem;
            box-shadow: 0 2px 8px rgba(105, 108, 255, 0.2);
            transition: width 0.3s ease, background 0.2s ease;
            overflow: hidden;
            white-space: nowrap;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .fab-content {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 0 16px;
        }

            .fab-content i {
                flex-shrink: 0;
                font-size: 1.4rem;
                transition: margin 0.3s ease;
            }

        .fab-add-user .text {
            opacity: 0;
            margin-left: 0;
            overflow: hidden;
            max-width: 0;
            transition: opacity 0.3s ease, max-width 0.3s ease, margin-left 0.3s ease;
            font-size: 1rem;
            white-space: nowrap;
        }

        .fab-add-user:hover {
            width: 200px;
            background: #5a5edb;
        }

            .fab-add-user:hover .text {
                opacity: 1;
                margin-left: 12px;
                max-width: 140px;
            }

        .fab-add-user i,
        .fab-add-user .text {
            color: white;
            transition: color 0.3s ease;
        }

    </style>
}
