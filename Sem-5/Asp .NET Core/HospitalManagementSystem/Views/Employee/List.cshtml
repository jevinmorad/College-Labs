@model DataTable
@using System.Data
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <div class="pagetitle">
        <h1 class="display-6">Employee List</h1>
    </div>
    <div class="dropdown">
        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="filterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bx bx-filter-alt"></i> Filter
        </button>
        <ul class="dropdown-menu p-3" style="min-width: 200px;" aria-labelledby="filterDropdown">
            <li>
                <strong>Gender</strong><br />
                <div class="form-check">
                    <input class="form-check-input filter-gender" type="checkbox" value="Male" id="filterMale">
                    <label class="form-check-label" for="filterMale">Male</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input filter-gender" type="checkbox" value="Female" id="filterFemale">
                    <label class="form-check-label" for="filterFemale">Female</label>
                </div>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li>
                <strong>Status</strong><br />
                <div class="form-check">
                    <input class="form-check-input filter-status" type="checkbox" value="Active" id="filterActive">
                    <label class="form-check-label" for="filterActive">Active</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input filter-status" type="checkbox" value="Inactive" id="filterInactive">
                    <label class="form-check-label" for="filterInactive">Inactive</label>
                </div>
            </li>
        </ul>
    </div>
</div>

<div class="card">
    <h5 class="card-header">All Users</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone No</th>
                    <th>Date of Birth</th>
                    <th>Gender</th>
                    <th>Hire Date</th>
                    <th>Job Title</th>
                    <th>Department</th>
                    <th>Salary</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        <td><strong>@row["FirstName"]</strong></td>
                        <td>@row["LastName"]</td>
                        <td>@row["PhoneNumber"]</td>
                        <td>@row["Email"]</td>
                        <td>@row["DateOfBirth"]</td>
                        <td>@row["Gender"]</td>
                        <td>@row["HireDate"]</td>
                        <td>@row["JobTitle"]</td>
                        <td>@row["Department"]</td>
                        <td>@row["Salary"]</td>
                        <td>
                            <span class="badge bg-label-primary me-1">
                                @((Convert.ToBoolean(row["IsActive"]) ? "Active" : "Inactive"))
                            </span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Employee" asp-action="Edit" asp-route-id="@row["EmployeeId"]">
                                        <i class="bx bx-edit-alt me-1"></i> Edit
                                    </a>
                                    <form asp-controller="Employee" asp-action="Delete" asp-route-id="@row["EmployeeId"]" method="post" style="display:inline;">
                                        <button type="submit" class="dropdown-item" onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-controller="Employee" asp-action="Create" class="fab-add-user" title="Create new user">
    <span class="fab-content">
        <i class="bx bx-user-plus"></i>
        <span class="text">Create new Employee</span>
    </span>
</a>

@section Scripts {
    <style>
        .fab-add-user {
            position: fixed;
            bottom: 32px;
            right: 32px;
            z-index: 999;
            width: 56px;
            height: 56px;
            background: #696cff;
            color: #fff;
            border-radius: 28px;
            font-size: 1.4rem;
            box-shadow: 0 2px 8px rgba(105, 108, 255, 0.2);
            transition: width 0.3s ease, background 0.2s ease;
            overflow: hidden;
            white-space: nowrap;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .fab-content {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 0 16px;
        }

        .fab-content i {
            flex-shrink: 0;
            font-size: 1.4rem;
            transition: margin 0.3s ease;
        }

        .fab-add-user .text {
            opacity: 0;
            margin-left: 0;
            overflow: hidden;
            max-width: 0;
            transition: opacity 0.3s ease, max-width 0.3s ease, margin-left 0.3s ease;
            font-size: 1rem;
            white-space: nowrap;
        }

        .fab-add-user:hover {
            width: 240px;
            background: #5a5edb;
        }

        .fab-add-user:hover .text {
            opacity: 1;
            margin-left: 12px;
            max-width: 165px;
        }

        .fab-add-user i,
        .fab-add-user .text {
            color: white;
            transition: color 0.3s ease;
        }

        .dropdown-menu {
            border-radius: 8px;
            box-shadow: 0px 4px 16px rgba(0, 0, 0, 0.1);
        }

        .dropdown-menu strong {
            font-size: 0.9rem;
            color: #333;
        }
    </style>

    <script>
        document.querySelectorAll('.filter-gender, .filter-status').forEach(cb => {
            cb.addEventListener('change', applyAdvancedFilters);
        });

        function applyAdvancedFilters() {
            const selectedGenders = Array.from(document.querySelectorAll('.filter-gender:checked')).map(cb => cb.value.toLowerCase());
            const selectedStatuses = Array.from(document.querySelectorAll('.filter-status:checked')).map(cb => cb.value.toLowerCase());

            const rows = document.querySelectorAll("tbody tr");

            rows.forEach(row => {
                const genderCell = row.children[5].innerText.toLowerCase();
                const statusText = row.children[10].innerText.toLowerCase();

                const genderMatch = selectedGenders.length === 0 || selectedGenders.includes(genderCell);
                const statusMatch = selectedStatuses.length === 0 || selectedStatuses.includes(statusText);

                row.style.display = (genderMatch && statusMatch) ? "" : "none";
            });
        }
    </script>
}
