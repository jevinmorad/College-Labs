@model Department

@{
    bool isEdit = Model != null && Model.DepartmentID > 0;
    string formAction = isEdit ? "Edit" : "Create";
    int UserId = @CommonVariable.UserID() ?? 1;
}

<div class="pagetalent my-4">
    <h1 class="display-6">@(isEdit ? "Edit Department" : "Create Department")</h1>
    <p class="text-muted">
        @(isEdit ? "Update the department details below." : "Please fill in the details to create a new department.")
    </p>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <form method="post" asp-controller="Department" asp-action="@formAction">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">Department Information</h5>
                </div>
                <div class="card-body p-4">
                    @if (isEdit)
                    {
                        <input type="hidden" asp-for="DepartmentID" />
                    }
                    <input type="hidden" asp-for="UserID" value="@UserId" />

                    <div class="mb-3">
                        <label asp-for="DepartmentName" class="form-label">Name <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bx bxs-building-house"></i></span>
                            <input asp-for="DepartmentName" class="form-control" placeholder="Enter department name" />
                        </div>
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description <span class="text-danger">*</span></label>
                        <textarea asp-for="Description" rows="4" class="form-control" placeholder="A brief description of the department..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="form-check form-switch mt-4">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
                        <label class="form-check-label" asp-for="IsActive">Set department as Active</label>
                    </div>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="List" class="btn btn-outline-secondary">Back to List</a>
                    <button type="reset" class="btn btn-secondary">Reset</button>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bx bx-save me-1"></i> @(isEdit ? "Save Changes" : "Create Department")
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>