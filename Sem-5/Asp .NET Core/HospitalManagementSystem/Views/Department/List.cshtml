@using HospitalManagementSystem.Utilities
@model List<Department>

<div>
    <div class="pagetitle my-4">
        <h1 class="display-6">Department List</h1>
    </div>
</div>
<div class="card">
    <h5 class="card-header">All Departments</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var dept in Model)
                {
                    <tr>
                        <td><strong>@dept.DepartmentName</strong></td>
                        <td>@dept.Description</td>
                        <td>
                            <span class="badge bg-label-primary me-1">
                                @(dept.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Department" asp-action="Edit" asp-route-id="@UrlEncryptor.Encrypt(dept.DepartmentID.ToString()))">
                                        <i class="bx bx-edit-alt me-1"></i> Edit
                                    </a>
                                    <form asp-controller="Department" asp-action="Delete" asp-route-id="@UrlEncryptor.Encrypt(dept.DepartmentID.ToString()))" method="post" style="display:inline;">
                                        <button type="submit" class="dropdown-item" onclick="return confirm('Are you sure you want to delete this doctor?');">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<a asp-controller="Department" asp-action="Create" class="fab-add-user" title="Create new user">
    <span class="fab-content">
        <i class="bx bx-user-plus"></i>
        <span class="text">Create new department</span>
    </span>
</a>