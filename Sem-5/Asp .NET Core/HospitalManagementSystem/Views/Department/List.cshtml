@using HospitalManagementSystem.Utilities
@model List<Department>

@{
    ViewData["Title"] = "Department List";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <div class="pagetitle">
        <h1 class="display-6 mb-1">Departments</h1>
        <p class="text-muted mb-0">Manage all hospital departments.</p>
    </div>
    <a asp-controller="Department" asp-action="Create" class="btn btn-primary">
        <i class="bx bx-plus me-1"></i> New Department
    </a>
</div>

<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Department Name</th>
                    <th>Description</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var dept in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="bx bxs-building-house fs-3 text-primary me-3"></i>
                                <div>
                                    <strong class="fw-bold">@dept.DepartmentName</strong>
                                </div>
                            </div>
                        </td>
                        <td>@dept.Description</td>
                        <td class="text-center">
                            @if (dept.IsActive)
                            {
                                <span class="badge bg-label-success">
                                    <i class="bx bx-check-circle me-1"></i> Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-label-secondary">
                                    <i class="bx bx-x-circle me-1"></i> Inactive
                                </span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="d-inline-flex gap-1">
                                <a asp-controller="Department" asp-action="Edit" asp-route-id="@UrlEncryptor.Encrypt(dept.DepartmentID.ToString())" 
                                   class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="bx bx-pencil"></i>
                                </a>
                                <form asp-controller="Department" asp-action="Delete" asp-route-id="@dept.DepartmentID" method="post">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete"
                                            onclick="return confirm('Are you sure you want to delete this department?');">
                                        <i class="bx bx-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>