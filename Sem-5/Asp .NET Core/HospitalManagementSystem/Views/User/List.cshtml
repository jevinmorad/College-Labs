@model List<User>

<div class="pagetitle my-4">
    <h1 class="display-6">User List</h1>
</div>

<div class="card">
    <h5 class="card-header">All Users</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover" id="userTable">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="user-row"
                        data-id="@user.UserID"
                        data-name="@user.UserName"
                        data-email="@user.Email"
                        data-mobile="@user.MobileNo"
                        data-status="@(user.IsActive ? "Active" : "Inactive")"
                        data-photo="@user.ProfilePhoto">
                        <td><strong>@user.UserName</strong></td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge bg-label-primary @(user.IsActive ? "bg-success" : "bg-secondary")">
                                @(user.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-controller="User" asp-action="Create" class="fab-add-user" title="Create new user">
    <span class="fab-content">
        <i class="bx bx-user-plus"></i>
        <span class="text">Create new user</span>
    </span>
</a>

<!-- User Detail Modal -->
<div class="modal fade" id="userDetailModal" tabindex="-1" aria-labelledby="userDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bx bx-user-circle me-2 text-white"></i><span class="text-white">User Details</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img id="userPhoto" src="/images/default-user.png"
                             alt="Profile Photo"
                             class="rounded-circle border border-3 border-primary mb-3"
                             style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label class="fw-bold">Name:</label>
                            <div id="modalUserName"></div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Email:</label>
                            <div id="modalUserEmail"></div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Mobile No:</label>
                            <div id="modalUserMobile"></div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Status:</label>
                            <span id="modalUserStatus" class="badge"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a asp-controller="User" asp-action="Edit" asp-route-id="__id__" id="editUserBtn" class="btn btn-primary">
                    <i class="bx bx-edit-alt me-1"></i> Edit
                </a>
                <form asp-controller="User" asp-action="Delete" asp-route-id="__id__" id="deleteUserForm" method="post">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?');">
                        <i class="bx bx-trash me-1"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const rows = document.querySelectorAll('.user-row');
            const modal = new bootstrap.Modal(document.getElementById('userDetailModal'));
            const defaultPhoto = '/images/default-profile.png';

            rows.forEach(row => {
                row.addEventListener('click', function () {
                    const id = this.dataset.id;
                    const name = this.dataset.name;
                    const email = this.dataset.email;
                    const mobile = this.dataset.mobile;
                    const status = this.dataset.status;
                    const photo = this.dataset.photo || defaultPhoto;

                    document.getElementById('modalUserName').textContent = name;
                    document.getElementById('modalUserEmail').textContent = email;
                    document.getElementById('modalUserMobile').textContent = mobile;
                    document.getElementById('modalUserStatus').textContent = status;
                    document.getElementById('modalUserStatus').className =
                        `badge rounded-pill px-3 py-2 ${status === "Active" ? "bg-primary" : "bg-warning"}`;
                    document.getElementById('userPhoto').src = photo || defaultPhoto;

                    // Update buttons with correct id
                    const editBtn = document.getElementById('editUserBtn');
                    const deleteForm = document.getElementById('deleteUserForm');

                    editBtn.href = editBtn.href.replace('__id__', id);
                    deleteForm.action = deleteForm.action.replace('__id__', id);

                    modal.show();
                });
            });
        });
    </script>
}