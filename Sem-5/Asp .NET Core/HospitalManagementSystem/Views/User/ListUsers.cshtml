@model List<User>

<div>
    <div class="pagetitle my-4">
        <h1 class="display-6">User List</h1>
    </div>
</div>
<div class="card">
    <h5 class="card-header">All Users</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile No</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var user in Model)
                {
                    <tr>
                        <td><strong>@user.UserName</strong></td>
                        <td>@user.Email</td>
                        <td>@user.MobileNo</td>
                        <td>
                            <span class="badge bg-label-primary me-1">
                                @(user.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="User" asp-action="CreateEditUser" asp-route-id="@user.UserID">
                                        <i class="bx bx-edit-alt me-1"></i> Edit
                                    </a>
                                    <form asp-controller="User" asp-action="DeleteUser" asp-route-id="@user.UserID" method="post" style="display:inline;">
                                        <button type="submit" class="dropdown-item" onclick="return confirm('Are you sure you want to delete this user?');">
                                            <i class="bx bx-trash me-1"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-controller="User" asp-action="CreateEditUser" class="fab-add-user" title="Add User">
    <i class="bx bx-plus"></i>
</a>

@section Scripts {
    <style>
        .fab-add-user {
            position: fixed;
            bottom: 32px;
            right: 32px;
            z-index: 999;
            width: 56px;
            height: 56px;
            background: #696cff;
            color: #fff;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            box-shadow: 0 2px 8px rgba(105, 108, 255, 0.2);
            transition: background 0.2s;
            text-decoration: none;
        }
        .fab-add-user:hover {
            background: #5a5edb;
            color: #fff;
            text-decoration: none;
        }
    </style>
}