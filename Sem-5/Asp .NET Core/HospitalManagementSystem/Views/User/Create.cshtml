@model User

@{
    bool isEdit = Model != null && Model.UserID > 0;
    string formAction = isEdit ? "Edit" : "Create";
}

<div>
    <div class="pagetitle my-4">
        <h1 class="display-6">@(isEdit ? "Edit User" : "Create User")</h1>
        <p class="text-muted">
            @(isEdit ? "Update the user information below." : "Please fill in the details to create a new user.")
        </p>
    </div>

    <section class="section">
        <div class="card shadow-sm">
            <div class="card-body p-4"> 
                <h5 class="card-title mb-4">User Information</h5>
                <form method="post" asp-controller="User" asp-action="@formAction">
                    @if (isEdit)
                    {
                        <input type="hidden" asp-for="UserID" />
                    }
                    <div class="mb-3 row">
                        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UserName" class="form-control" placeholder="Enter full name" required />
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Email" class="form-control" type="email" placeholder="example@domain.com" required />
                        </div>
                    </div>

                    @if(!isEdit) 
                    {
                        <div class="mb-3 row">
                            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Password" class="form-control" type="password" placeholder="At least 8 characters" required />
                            </div>
                        </div>
                    }

                    <div class="mb-4 row">
                        <label asp-for="MobileNo" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="MobileNo" class="form-control" placeholder="e.g. 9876543210" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-primary px-4">
                                @(isEdit ? "Save Edit" : "Save User")
                            </button>
                            <button type="reset" class="btn btn-secondary ms-2">Reset</button>
                            <a asp-action="List" class="btn btn-outline-secondary ms-2">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>