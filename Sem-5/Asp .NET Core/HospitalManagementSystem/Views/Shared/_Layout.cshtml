<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>@ViewData["Title"] Hospital Management System</title>

    <!-- Favicons -->
    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/boxicons/css/boxicons.min.css">
    <link rel="stylesheet" href="~/lib/quill/quill.snow.css">
    <link rel="stylesheet" href="~/lib/quill/quill.bubble.css">
    <link rel="stylesheet" href="~/lib/remixicon/remixicon.css">
    <link rel="stylesheet" href="~/lib/simple-datatables/style.css">

    <!-- Template Main CSS File -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class="d-flex align-items-center justify-content-between">
            <a class="logo d-flex align-items-center" asp-controller="Doctor" asp-action="Index">
                <img src="~/img/logo.png" alt="">
                <span class="d-none d-lg-block">HMS</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="POST" action="#">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>
        </div><!-- End Search Bar -->

    </header><!-- End Header -->

    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link " href="index.html">
                    <i class="bi bi-grid"></i>
                    <span>Dashboard</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#doctors-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-person-plus"></i><span>Doctors</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="doctors-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="doctors-alerts.html">
                            <i class="bi bi-circle"></i><span>List</span>
                        </a>
                    </li>
                    <li>
                        <a href="doctors-accordion.html">
                            <i class="bi bi-circle"></i><span>Add</span>
                        </a>
                    </li>
                </ul>
            </li><!-- End Doctorss Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#patients-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-person-wheelchair"></i><span>Patients</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="patients-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="patients-elements.html">
                            <i class="bi bi-circle"></i><span>List</span>
                        </a>
                    </li>
                    <li>
                        <a href="patients-layouts.html">
                            <i class="bi bi-circle"></i><span>Add</span>
                        </a>
                    </li>
                </ul>
            </li><!-- End Patients Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#users-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi bi-person"></i><span>Users</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="users-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="users-general.html">
                            <i class="bi bi-circle"></i><span>List</span>
                        </a>
                    </li>
                    <li>
                        <a href="users-data.html">
                            <i class="bi bi-circle"></i><span>Add</span>
                        </a>
                    </li>
                </ul>
            </li><!-- End Users Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#departments-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-bar-chart"></i><span>Departments</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="departments-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="departments-chartjs.html">
                            <i class="bi bi-circle"></i><span>List</span>
                        </a>
                    </li>
                    <li>
                        <a href="departments-apexcharts.html">
                            <i class="bi bi-circle"></i><span>Edit</span>
                        </a>
                    </li>
                </ul>
            </li><!-- End Departments Nav -->

            <li class="nav-item">
                <a class="nav-link collapsed" data-bs-target="#appointments-nav" data-bs-toggle="collapse" href="#">
                    <i class="bi bi-gem"></i><span>Appointments</span><i class="bi bi-chevron-down ms-auto"></i>
                </a>
                <ul id="appoitments-nav" class="nav-content collapse " data-bs-parent="#sidebar-nav">
                    <li>
                        <a href="appoitments-bootstrap.html">
                            <i class="bi bi-circle"></i><span>List</span>
                        </a>
                    </li>
                    <li>
                        <a href="appoitments-remix.html">
                            <i class="bi bi-circle"></i><span>Add</span>
                        </a>
                    </li>
                </ul>
            </li><!-- End Appointments Nav -->

        </ul>

    </aside><!-- End Sidebar-->

    <!-- ======= Main ======= -->
    <div id="main" class="main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- End #main -->

    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>HMS</span></strong>. All Rights Reserved
        </div>
        <div class="credits">
            Designed by <a href="https://linkedin.com/in/jevinmorad/">Jevin Morad</a>
        </div>
    </footer><!-- End Footer -->

    <!-- Vendor JS Files -->
    <script src="~/lib/apexcharts/apexcharts.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/chart.js/chart.umd.js"></script>
    <script src="~/lib/echarts/echarts.min.js"></script>
    <script src="~/lib/quill/quill.js"></script>
    <script src="~/lib/simple-datatables/simple-datatables.js"></script>
    <script src="~/lib/tinymce/tinymce.min.js"></script>
    <script src="~/lib/php-email-form/validate.js"></script>

    <!-- Template Main JS File -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
