<form asp-controller="Export" asp-action="ExportToCsv" method="post">
    <div class="modal-body">
        <p class="text-muted">Select the data you would like to download. The data will be exported in CSV format.</p>

        <div class="list-group">
            <label class="list-group-item">
                <input class="form-check-input me-1" type="checkbox" name="selectedModels" value="Patients">
                Patients
            </label>
            <label class="list-group-item">
                <input class="form-check-input me-1" type="checkbox" name="selectedModels" value="Doctors">
                Doctors
            </label>
            <label class="list-group-item">
                <input class="form-check-input me-1" type="checkbox" name="selectedModels" value="Departments">
                Departments
            </label>
            <label class="list-group-item">
                <input class="form-check-input me-1" type="checkbox" name="selectedModels" value="Appointments">
                Appointments
            </label>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            <i class="bx bx-download me-1"></i> Download Data
        </button>
    </div>
</form>