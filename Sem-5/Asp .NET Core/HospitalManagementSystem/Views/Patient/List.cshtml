@using HospitalManagementSystem.Utilities
@model List<Patient>

@{
    ViewData["Title"] = "Patient List";
}

<div class="d-flex justify-content-between align-items-center my-4">
    <div class="pagitle">
        <h1 class="display-6 mb-1">Patients</h1>
        <p class="text-muted mb-0">Manage all patient records.</p>
    </div>
    <a asp-controller="Patient" asp-action="Create" class="btn btn-primary">
        <i class="bx bx-plus me-1"></i> New Patient
    </a>
</div>

<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Patient Info</th>
                    <th>Demographics</th>
                    <th>Contact</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var patient in Model)
                {
                    var today = DateTime.Today;
                    var age = today.Year - patient.DateOfBirth.Year;
                    if (patient.DateOfBirth.Date > today.AddYears(-age))
                    {
                        age--;
                    }

                    <tr class="clickable-row" style="cursor: pointer;" data-modal-target="#modal-@patient.PatientID">
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@(string.IsNullOrEmpty(patient.ProfilePhoto) ? "/images/default-profile.png" : patient.ProfilePhoto)"
                                     alt="Avatar" class="rounded-circle" style="width: 45px; height: 45px; object-fit: cover;" />
                                <div class="ms-3">
                                    <div class="fw-bold">@patient.Name</div>
                                    <small class="text-muted">@patient.Email</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div>
                                <div class="fw-bold">@age years</div>
                                <small class="text-muted">@patient.Gender</small>
                            </div>
                        </td>
                        <td>
                            <div>
                                <div class="fw-bold">@patient.Phone</div>
                                <small class="text-muted">@patient.City, @patient.State</small>
                            </div>
                        </td>
                        <td class="text-center">
                            @if (patient.IsActive)
                            {
                                <span class="badge bg-label-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-label-secondary">Inactive</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="d-inline-flex gap-1">
                                <a asp-controller="Patient" asp-action="Edit" asp-route-id="@UrlEncryptor.Encrypt(patient.PatientID.ToString())"
                                   class="btn btn-sm btn-outline-primary" title="Edit">
                                    <i class="bx bx-pencil"></i>
                                </a>

                                <form asp-controller="Patient" asp-action="Delete" asp-route-id="@UrlEncryptor.Encrypt(patient.PatientID.ToString())" method="post">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete"
                                            onclick="event.stopPropagation(); return confirm('Are you sure you want to delete this patient?');">
                                        <i class="bx bx-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@foreach (var patient in Model)
{
    <div class="modal fade" id="modal-@patient.PatientID" tabindex="-1" aria-labelledby="modalLabel-@patient.PatientID" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel-@patient.PatientID">Patient Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @await Html.PartialAsync("_PatientDetails", patient)
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.clickable-row').on('click', function (e) {
                // Check if the click target is within a dropdown or a button/link
                if ($(e.target).closest('.dropdown').length || $(e.target).is('button, a') || $(e.target).closest('button, a').length) {
                    return; // Do nothing if click is on an interactive element
                }

                // If not an interactive element, show the modal
                var modalTarget = $(this).data('modal-target');
                var modal = new bootstrap.Modal(document.querySelector(modalTarget));
                modal.show();
            });
        });
    </script>
}