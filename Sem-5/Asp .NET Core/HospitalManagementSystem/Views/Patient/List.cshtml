@using HospitalManagementSystem.Utilities;
@model List<Patient>

<div class="pagetitle my-4">
    <h1 class="display-6">Patient List</h1>
</div>

<div class="card">
    <h5 class="card-header">All Patients</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover" id="patientTable">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model)
                {
                    <tr class="patient-row"
                        data-id="@UrlEncryptor.Encrypt(patient.PatientID.ToString())"
                        data-name="@patient.Name"
                        data-dob="@patient.DateOfBirth.ToShortDateString()"
                        data-gender="@patient.Gender"
                        data-email="@patient.Email"
                        data-phone="@patient.Phone"
                        data-address="@patient.Address"
                        data-city="@patient.City"
                        data-state="@patient.State"
                        data-status="@(patient.IsActive ? "Active" : "Inactive")"
                        data-photo="@patient.ProfilePhoto">
                        <td><strong>@patient.Name</strong></td>
                        <td>@patient.Phone</td>
                        <td>
                            <span class="badge me-1 @(patient.IsActive ? "bg-label-primary" : "bg-secondary")">
                                @(patient.IsActive ? "Active" : "Inactive")
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a asp-controller="Patient" asp-action="Create" class="fab-add-user" title="Create new patient">
    <span class="fab-content">
        <i class="bx bx-user-plus"></i>
        <span class="text">Create new patient</span>
    </span>
</a>

<!-- Patient Detail Modal -->
<div class="modal fade" id="patientDetailModal" tabindex="-1" aria-labelledby="patientDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="bx bx-user-circle me-2 text-white"></i><span class="text-white">Patient Details</span>
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row">
                    <div class="col-md-4 text-center">
                        <img id="patientPhoto" src="/images/default-patient.png"
                             alt="Profile Photo"
                             class="rounded-circle border border-3 border-primary mb-3"
                             style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label class="fw-bold">Name:</label>
                            <div id="modalPatientName"></div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Date of Birth:</label>
                            <div id="modalPatientDob"></div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Gender:</label>
                            <div id="modalPatientGender"></div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Email:</label>
                            <div id="modalPatientEmail"></div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Phone:</label>
                            <div id="modalPatientPhone"></div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Address:</label>
                            <div id="modalPatientAddress"></div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">City:</label>
                            <div id="modalPatientCity"></div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">State:</label>
                            <div id="modalPatientState"></div>
                        </div>
                        <div class="mb-3">
                            <label class="fw-bold">Status:</label>
                            <span id="modalPatientStatus" class="badge"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a asp-controller="Patient" asp-action="Edit" asp-route-id="__id__" id="editPatientBtn" class="btn btn-primary">
                    <i class="bx bx-edit-alt me-1"></i> Edit
                </a>
                <form asp-controller="Patient" asp-action="Delete" asp-route-id="__id__" id="deletePatientForm" method="post">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this patient?');">
                        <i class="bx bx-trash me-1"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const rows = document.querySelectorAll('.patient-row');
            const modal = new bootstrap.Modal(document.getElementById('patientDetailModal'));
            const defaultPhoto = '/images/default-patient.png';

            rows.forEach(row => {
                row.addEventListener('click', function () {
                    const id = this.dataset.id;
                    const name = this.dataset.name;
                    const dob = this.dataset.dob;
                    const gender = this.dataset.gender;
                    const email = this.dataset.email;
                    const phone = this.dataset.phone;
                    const address = this.dataset.address;
                    const city = this.dataset.city;
                    const state = this.dataset.state;
                    const status = this.dataset.status;
                    const photo = this.dataset.photo || defaultPhoto;

                    document.getElementById('modalPatientName').textContent = name;
                    document.getElementById('modalPatientDob').textContent = dob;
                    document.getElementById('modalPatientGender').textContent = gender;
                    document.getElementById('modalPatientEmail').textContent = email;
                    document.getElementById('modalPatientPhone').textContent = phone;
                    document.getElementById('modalPatientAddress').textContent = address;
                    document.getElementById('modalPatientCity').textContent = city;
                    document.getElementById('modalPatientState').textContent = state;
                    document.getElementById('modalPatientStatus').textContent = status;
                    document.getElementById('modalPatientStatus').className =
                        `badge rounded-pill px-3 py-2 ${status === "Active" ? "bg-primary" : "bg-warning"}`;
                    document.getElementById('patientPhoto').src = photo || defaultPhoto;

                    // Update Edit/Delete buttons
                    const editBtn = document.getElementById('editPatientBtn');
                    const deleteForm = document.getElementById('deletePatientForm');

                    editBtn.href = editBtn.href.replace('__id__', id);
                    deleteForm.action = deleteForm.action.replace('__id__', id);

                    modal.show();
                });
            });
        });
    </script>
}