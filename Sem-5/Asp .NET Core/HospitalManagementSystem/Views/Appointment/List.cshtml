@using HospitalManagementSystem.Utilities
@model List<Appointment>

@{
    ViewData["Title"] = "Appointment List";
}

<div class="pagetitle my-4">
    <h1 class="display-6">Appointment List</h1>
</div>

<div class="card">
    <h5 class="card-header">All Appointments</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead class="table-light">
                <tr>
                    <th>Patient Name</th>

                    <th>Doctor Name</th>
                    <th>Appointment Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>

            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var appt in Model)
                {
                    <tr data-url="@Url.Action("Details", "Appointment", new { id = appt.AppointmentID })"
                        class="details-row"
                        style="cursor: pointer;">

                        <td>@appt.Patient.Name</td>
                        <td>@appt.Doctor.Name</td>

                        <td>@appt.AppointmentDate.ToString("g")</td>
                        <td><span class="badge bg-label-primary me-1">@appt.AppointmentStatus</span></td>
                        <td>
                            <div class="dropdown">

                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>

                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-controller="Appointment" asp-action="Edit" asp-route-id="@UrlEncryptor.Encrypt(appt.AppointmentID.ToString())">

                                        <i class="bx bx-edit-alt me-1"></i> Edit
                                    </a>
                                    <form asp-controller="Appointment" asp-action="Delete" asp-route-id="@UrlEncryptor.Encrypt(appt.AppointmentID.ToString())" method="post" style="display:inline;">

                                        <button type="submit" class="dropdown-item" onclick="return confirm('Are you sure you want to delete this appointment?');">
                                            <i class="bx bx-trash me-1"></i> Delete

                                        </button>
                                    </form>
                                </div>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<div class="modal fade" id="appointmentDetailsModal" tabindex="-1" aria-labelledby="appointmentDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="appointmentDetailsModalLabel">Appointment Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modal-body-content">
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            // When a row with the class 'details-row' is clicked
            $('.details-row').on('click', function (event) {
                // Prevent click on dropdown from triggering modal
                if ($(event.target).closest('.dropdown').length) {
                    return;
                }

                var url = $(this).data('url');
                var modalBody = $('#modal-body-content');
                var appointmentModal = new bootstrap.Modal(document.getElementById('appointmentDetailsModal'));

                // 1. Show a loading spinner inside the modal body
                modalBody.html('<div class="d-flex justify-content-center my-5"><div class="spinner-border" role="status"><span class="visually-hidden">Loading...</span></div></div>');

                // 2. Show the modal
                appointmentModal.show();

                // 3. Fetch the partial view from the controller
                $.get(url, function (data) {
                    // 4. On success, replace spinner with the fetched content
                    modalBody.html(data);
                }).fail(function() {
                    // On failure, show an error message
                    modalBody.html('<div class="alert alert-danger">Could not load appointment details. Please try again.</div>');
                });
            });
        });
    </script>
}