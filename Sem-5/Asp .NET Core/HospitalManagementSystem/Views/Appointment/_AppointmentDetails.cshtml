@model Appointment
@using HospitalManagementSystem.Utilities

@if (Model != null)
{
    <div class="card mb-3">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bx bx-user me-2 fs-4"></i>
            <h5 class="card-title text-white mb-0">Patient Information</h5>
        </div>
        <div class="card-body">
            <h5 class="card-title mt-3">@Model.Patient.Name</h5>
            <p class="card-text">
                <strong>Email:</strong> @Model.Patient.Email <br />
                <strong>Phone:</strong> @Model.Patient.Phone
            </p>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-header bg-info text-white d-flex align-items-center">
            <i class="bx bx-health me-2 fs-4"></i>
            <h5 class="card-title text-white mb-0">Doctor Information</h5>
        </div>
        <div class="card-body">

            <h5 class="card-title mt-3">@Model.Doctor.Name</h5>
            <p class="card-text">
                <strong>Email:</strong> @Model.Doctor.Email <br />
                <strong>Specialization:</strong> @Model.Doctor.Specialization
            </p>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex align-items-center">

            <i class="bx bx-calendar-event me-2 fs-4"></i>
            <h5 class="card-title mb-0">Appointment Information</h5>
        </div>
        <div class="card-body">
            <p class="card-text mt-3">
                <strong>Date & Time:</strong> @Model.AppointmentDate.ToString("F") <br />
                <strong>Status:</strong> <span class="badge bg-label-primary">@Model.AppointmentStatus</span> <br />
                <strong>Description:</strong> @Model.Description <br />
                <strong>Special Remarks:</strong> @(string.IsNullOrEmpty(Model.SpecialRemarks) ?
                            "N/A" : Model.SpecialRemarks) <br />
            <strong>Consultation Fee:</strong> @(Model.TotalConsultedAmount.HasValue? Model.TotalConsultedAmount.Value.ToString("C") : "N/A")
        </p>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <a class="btn btn-primary" asp-controller="Appointment" asp-action="Edit" asp-route-id="@UrlEncryptor.Encrypt(Model.AppointmentID.ToString())">
            <i class="bx bx-edit-alt me-1"></i> Edit
        </a>
        <form asp-controller="Appointment" asp-action="Delete" asp-route-id="@UrlEncryptor.Encrypt(Model.AppointmentID.ToString())" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this appointment?');">
                <i class="bx bx-trash me-1"></i> Delete
            </button>
        </form>
    </div>
</div>
}
else
{
    <div class="alert alert-danger">
        Could not load appointment details.
        Please try again.
    </div>
}